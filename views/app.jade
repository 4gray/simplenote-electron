doctype html
html(manifest=o.htmlWebpackPlugin.files.manifest)
  head
    meta(charset="utf-8")
    title= o.htmlWebpackPlugin.options.title || 'Simplenote'
    meta(name="apple-mobile-web-app-capable" content="yes")
    meta(name="viewport" content="width=device-width, maximum-scale=1")
    link(rel="icon" href="/favicon.ico")
    link(rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,300italic,400,400italic,600,600italic,700,700italic")
    script(type="text/javascript")!="var config=" + JSON.stringify(config) + ";"
  body
    each chunk in o.htmlWebpackPlugin.files.chunks
      script(type="text/javascript" charset="utf-8" src=chunk.entry)
